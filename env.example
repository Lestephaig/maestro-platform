# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (для production с HTTPS)
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
# Для разработки используется SQLite (по умолчанию)
# Для продакшена используйте PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Или для Heroku/Render (автоматически устанавливается):
# DATABASE_URL будет установлен автоматически платформой

# Redis для Channels
REDIS_URL=redis://127.0.0.1:6379/0
# Для продакшена (Heroku Redis):
# REDIS_URL=redis://:password@hostname:port/0

# Email Settings
# Для разработки используйте: EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Для продакшена используйте SMTP:
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@maestro-platform.com
# SITE_URL=http://127.0.0.1:8000
# Для продакшена: SITE_URL=https://yourdomain.com

# Security (для production)
# SECURE_SSL_REDIRECT=True  # Раскомментируйте для принудительного HTTPS

# Logging
# DJANGO_LOG_LEVEL=INFO